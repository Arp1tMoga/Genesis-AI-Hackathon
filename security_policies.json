{
  "policies": [
    {
      "name": "Critical Infrastructure Protection",
      "description": "Immediate isolation for critical system threats with high confidence",
      "threat_types": ["Infiltration", "DDoS"],
      "default_action": "isolate_host",
      "escalation_threshold": 0.7,
      "business_hours_only": false,
      "severity_escalation": {
        "critical": "isolate_host",
        "high": "alert_admin",
        "medium": "schedule_scan",
        "low": "no_action"
      }
    },
    {
      "name": "Network Scanning Policy",
      "description": "Block and alert on port scanning activities",
      "threat_types": ["PortScan"],
      "default_action": "block_ip",
      "escalation_threshold": 0.6,
      "business_hours_only": false,
      "auto_block_threshold": 0.8
    },
    {
      "name": "Web Security Policy",
      "description": "Monitor and contain web-based attacks during business hours",
      "threat_types": ["Web Attack", "Bot"],
      "default_action": "schedule_scan",
      "escalation_threshold": 0.8,
      "business_hours_only": true,
      "quarantine_threshold": 0.9
    },
    {
      "name": "Brute Force Protection",
      "description": "Immediate blocking of brute force attempts",
      "threat_types": ["Brute Force"],
      "default_action": "block_ip",
      "escalation_threshold": 0.5,
      "business_hours_only": false,
      "temp_block_duration": "24h"
    }
  ],
  "global_settings": {
    "max_confidence_for_no_action": 0.3,
    "critical_threshold": 0.9,
    "auto_escalation_enabled": true,
    "notification_settings": {
      "email_alerts": true,
      "sms_critical_only": true,
      "slack_integration": false
    }
  }
}
